{
    "compileOnSave": false,
    "compilerOptions": {
      "sourceRoot": "src",
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": true,
      "skipLibCheck": true,
      "pretty": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,      
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es6",
        "esnext"
      ]
    },
    "exclude": [
      "tests/**/*",
      "documentation/**/*",
      "node_modules/**/*",
      "coverage/**/*",
      "dist/**/*"
    ]
  }
  